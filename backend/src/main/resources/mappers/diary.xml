<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eggmoney.backend.model.dao.DiaryDao">

    <!-- resultMap for Diary -->
    <resultMap id="diaryMap" type="diary">
        <result column="record_list" property="recordList"/>
        <result column="comment" property="comment"/>
    </resultMap>

    <!-- resultMap for Record -->
    <resultMap id="recordMap" type="record">
        <id column="id" property="id"/>
        <result column="user_seq" property="userSeq"/>
        <result column="reg_date" property="regDate"/>
        <result column="exercise_part" property="exercisePart"/>
        <result column="exercise_name" property="exerciseName"/>
        <result column="set_cnt" property="setCnt"/>
        <result column="time_cnt" property="timeCnt"/>
    </resultMap>

    <!-- resultMap for Comment -->
    <resultMap id="commentMap" type="comment">
        <id column="id" property="id"/>
        <result column="userSeq" property="userSeq"/>
        <result column="reg_date" property="regDate"/>
        <result column="content" property="content"/>
    </resultMap>

    <insert id="insertRecord" parameterType="record">
        INSERT INTO diary
        VALUES (#{recordList}, #{comment})
    </insert>

    <update id="updateComment" parameterType="comment">
        UPDATE comment
        SET reg_date = #{regDate},
            context  = #{context}
    </update>

    <!-- parameterType 두 개 이상 작성 가능한지 확인 필요 -->
    <select id="selectDiary" parameterType="String, int" resultType="diary">
        SELECT record_list, comment
        FROM diary
        WHERE user_seq = #{userSeq}
          AND reg_date = #{regDate}
    </select>

    <delete id="deleteRecord" parameterType="int">
        DELETE
        FROM record
        WHERE id = #{id}
    </delete>

</mapper>