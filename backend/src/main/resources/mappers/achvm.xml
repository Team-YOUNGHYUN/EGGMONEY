<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eggmoney.backend.model.dao.AchvmDao">

    <resultMap id="achvmMap" type="achvm">
        <id column="id" property="id"/>
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="img_src" property="imgSrc" />
        <result column="reward" property="reward" />
        <result column="hidden" property="hidden" />
    </resultMap>

    <!-- 사용자가 달성한 업적 리스트 조회-->
    <select id="selectAchvm" resultMap="achvmMap" parameterType="int">
        SELECT * FROM achievement
        WHERE user_seq = #{userSeq}
    </select>

    <!-- 사용자가 달성한 업적의 id 리스트 조회-->
    <select id="selectAchvmId" resultType="list" parameterType="int">
        SELECT achvm_id FROM user_achvm_list
        WHERE user_seq = #{userSeq}
    </select>

    <!-- 사용자가 달성한 업적 등록 -->
    <insert id="insertAchvmId" parameterType="hashmap">
        INSERT INTO user_achvm_list VALUES
        (0, #{userSeq}, #{achvmId})
    </insert>


</mapper>
